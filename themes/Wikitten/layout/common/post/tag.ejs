<% if (post.tags && post.tags.length) { %>
    <div class="article-tag d-inline">
        <i class="fa fa-tag"></i>
        <%- list_tags(post.tags, { 
            show_count: false, 
            style: 'link', 
            class:'badge badge-secondary mr-1 ', 
            separator: '' 
        }) %>
    </div>
<% } %>