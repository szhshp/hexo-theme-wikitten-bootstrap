<% if (post.categories && post.categories.length) { %>
  <div class="article-category d-inline text-white-50 small">
  	<i class="fa fa-folder"></i>
    <%- list_categories(post.categories, {
      show_count: false,
      class: 'text-dark article-category',
      style: 'none',
      separator: '/'
    }) %> 
  </div>
<% } %>